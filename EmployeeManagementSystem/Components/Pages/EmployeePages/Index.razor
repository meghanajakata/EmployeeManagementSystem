@page "/employees"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject EmployeeManagementSystem.Data.EmployeeManagementSystemContext DB
@using EmployeeManagementSystem.Data

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="employees/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DB.Employee">
    <PropertyColumn Property="employee => employee.Name" />
    <PropertyColumn Property="employee => employee.Salary" />
    <PropertyColumn Property="employee => employee.Experience" />

    <TemplateColumn Context="employee">
        <a href="@($"employees/edit?id={employee.Id}")">Edit</a> |
        <a href="@($"employees/details?id={employee.Id}")">Details</a> |
        <a href="@($"employees/delete?id={employee.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
